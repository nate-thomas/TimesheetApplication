@using TimeSheetApplication.Models.TimeSheetSystem
@model Employees
@{
    ViewData["Title"] = "Index";
}

<h4>Log In</h4>

@using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div style="width:25%">
            @Html.LabelFor(e => e.EmployeeNumber)
            <div>
                @Html.TextBoxFor(e => e.EmployeeNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.EmployeeNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Using First Name as Password for now...-->
        <div style="width:25%">
            @Html.LabelFor(e => e.FirstName, new { @class = "col-md-2 control-label" })
            <div>
                @Html.PasswordFor(e => e.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Login Button -->
        <div>
            <div>
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style="color:red">
    <h2 style="font-weight:bold"> Important </h2>
    <p>
        This is a CSHTML page generated by the Dev team which purpose is only to test the redirection from Log In to the system!
    </p>
    <p>
        No validation or Login queries are executed (yet), the real log in page will be designed in Angular.
    </p>
</div>
